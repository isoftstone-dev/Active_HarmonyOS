<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:btn_insert"
        ohos:height="match_content"
        ohos:width="80fp"
        ohos:text_color="red"
        ohos:text="插入"
        ohos:text_size="20fp"
        ohos:weight="100fp"/>

    <Button
        ohos:id="$+id:btn_query"
        ohos:height="match_content"
        ohos:width="100fp"
        ohos:text_color="blue"
        ohos:text="查询"
        ohos:text_size="20fp"
        ohos:weight="100fp"/>

    <Button
        ohos:id="$+id:btn_update"
        ohos:height="match_content"
        ohos:width="100fp"
        ohos:text_color="green"
        ohos:text="更新"
        ohos:text_size="20fp"
        ohos:weight="100fp"/>

    <Button
        ohos:id="$+id:btn_delete"
        ohos:height="match_content"
        ohos:width="100fp"
        ohos:text_color="black"
        ohos:text="删除"
        ohos:text_size="20fp"
        ohos:weight="100fp"/>

    <ListContainer
        ohos:id="$+id:listText"
        ohos:height="match_parent"
        ohos:width="match_parent"/>

</DirectionalLayout>